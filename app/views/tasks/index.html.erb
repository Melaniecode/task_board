<h1><%= t('tasks_page') %></h1>

<%= link_to t('create'), new_task_path %>
<table>
  <thead>
    <tr>
      <td><%= t('task_title') %></td>
      <td><%= t('task_content') %></td>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td>
        <%= link_to t('edit'), edit_task_path(task) %>
        <%= button_to t('delete'), task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>