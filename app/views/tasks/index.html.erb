<h1><%= t('.tasks_page') %></h1>
<%= link_to t('.create'), new_task_path %>
<%= form_with(url: create_sample_tasks_path, method: :post) do |form| %>
  <%= form.submit '隨意新增10筆資料' %>
<% end %>

<%= form_tag(tasks_path, method: "get", id: 'sort') do %>
  <%= text_field_tag :title, params[:title], placeholder: t(".search_title"), id: "title" %>
  <%= select_tag :status, options_for_select(status_value_options, params[:status]), prompt: t(".search_status") %>
  <%= select_tag :sort_by, options_for_select(order_options, params[:sort_by]), prompt: t(".sort_by") %>
  <%= submit_tag t('.confirm'), name: nil %>
<% end %>


<table>
  <thead>
    <tr>
      <td><%= Task.human_attribute_name :title %></td>
      <td><%= Task.human_attribute_name :status %></td>
      <td><%= Task.human_attribute_name :priority %></td>
      <td><%= Task.human_attribute_name :start_time %></td>
      <td><%= Task.human_attribute_name :end_time %></td>
      <td><%= Task.human_attribute_name :content %></td>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= status_i18n(task.status) %></td>
      <td><%= priority_i18n(task.priority) %></td>
      <td><%= task.start_time %></td>
      <td><%= task.end_time %></td>
      <td><%= task.content %></td>
     

      <td>
        <%= link_to t('.edit'), edit_task_path(task) %>
        <%= button_to t('.delete'), task_path(task), method: :delete %>
      </td>
      

    </tr>
    <% end %>
  </tbody>
</table>
