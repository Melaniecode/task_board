<%= form_with model: task, local: true do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title, id: "task_title" %> <br />

  <%= f.label :content %>
  <%= f.text_area :content, id: "task_content" %> <br />

  <%= f.label :start_time %>
  <%= f.datetime_field :start_time, id: "task_start" %> <br />

  <%= f.label :end_time %>
  <%= f.datetime_field :end_time, id: "task_end" %> <br />

  <%= f.label :status %>
  <%= f.select :status, Task.statuses.keys.map { |k| [k, k] }, id: "task_status" %> <br />

  <%= f.label :priority %>
  <%= f.select :priority, Task.priorities.keys.map { |k| [k, k] }, id: "task_priority" %> <br />

  <%= f.submit %>
<% end %>