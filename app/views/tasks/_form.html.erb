<%= form_for(task) do |f| %>

  <% if task.errors.any? %>
    <div class="alert alert-danger">
      <% task.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>
  <%= f.label :title, t('task_title') %>
  <%= f.text_field :title %> <br />

  <%= f.label :content, t('task_content') %>
  <%= f.text_area :content %> <br />

  <%= f.submit %>
<% end %>
 